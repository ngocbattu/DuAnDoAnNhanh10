<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTietSPNuoc">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13ACF1"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_ctsp_nuoc"
        />

    <ImageView
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sale"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_ctsp_nuoc"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/img_anh_ctsp_nuoc"
        />

    <TextView
        android:id="@+id/txt_ct_tensp_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textSize="20sp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="@+id/img_anh_ctsp_nuoc"
        app:layout_constraintTop_toBottomOf="@+id/img_anh_ctsp_nuoc" />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/txt_ct_tensp_nuoc"
        app:layout_constraintTop_toBottomOf="@+id/txt_ct_tensp_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Giá sản phẩm "
        android:id="@+id/txt_ct_gia_sp_nuoc"
        android:layout_marginTop="15dp"
        />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/txt_ct_gia_sp_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi Tiêt Sản Phẩm : "
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ct_gia_sp_nuoc"
        android:layout_marginTop="35dp"
        android:id="@+id/txt_12"
        />
    <TextView
        app:layout_constraintStart_toStartOf="@+id/txt_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="mô tả"
        app:layout_constraintTop_toBottomOf="@+id/txt_12"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_mota_sp_nuoc"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_input_8"
        app:layout_constraintStart_toEndOf="@+id/img_anh_ctsp_nuoc"
        android:layout_marginLeft="65dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_ctsp_nuoc"
        android:layout_marginTop="45dp"
        android:hint="Số lượng"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_so_luong_sp_nuoc"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mua"
        android:id="@+id/btn_xac_nhan_nuoc"
        app:layout_constraintTop_toBottomOf="@+id/text_input_8"
        app:layout_constraintEnd_toEndOf="@+id/text_input_8"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>