<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/cuttom_vien">
        <ImageView
            android:id="@+id/image_sanpham_gio_hang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_ten_san_pham_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Tên Sản phẩm "
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/image_sanpham_gio_hang"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_gia_sp_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Giá sản phẩm "
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/image_sanpham_gio_hang"
            app:layout_constraintTop_toBottomOf="@+id/txt_ten_san_pham_gio_hang" />

        <TextView
            android:id="@+id/txt_so_luong_gio_hang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Số lượng mua "
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/image_sanpham_gio_hang"
            app:layout_constraintTop_toBottomOf="@+id/txt_gia_sp_gio_hang" />
        <ImageView
            android:id="@+id/btn_huy_sp_gio_hang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/ic_drop"
            app:layout_constraintStart_toEndOf="@+id/txt_so_luong_gio_hang"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>