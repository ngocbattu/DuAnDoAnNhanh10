<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmnet.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/anhbia"
        android:id="@+id/layout1"
        android:orientation="vertical"
        ></TextView>
    <TextView
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm  mới "
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25sp"
        android:textColor="#37B7F1"
        android:id="@+id/txt_sp_moi"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/sale"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintStart_toEndOf="@+id/txt_sp_moi"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_sp_moi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />
    <EditText
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:hint="Tìm kiếm"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.28"
        android:id="@+id/txt_tim_kiem"
        android:background="@drawable/cuttom_vien_tim_kiem"
         />
    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/tim_kiem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_tim_kiem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.28"
        android:layout_marginLeft="30dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>